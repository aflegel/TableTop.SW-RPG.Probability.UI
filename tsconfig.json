{
	"compilerOptions": {
		"target": "es6",
		"module": "esnext",
		"allowJs": true,
		"skipLibCheck": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"noEmit": true,
		"jsx": "preserve",
		"noImplicitAny": true,
		"experimentalDecorators": true,
		"lib": [
			"dom",
			"dom.iterable",
			"esnext"
		]
	},
	"compileOnSave": false,
	"exclude": [
		"node_modules"
	],
	"include": [
		"src"
	],
	"rootDirs": [
		"src",
		"stories"
	]
}
